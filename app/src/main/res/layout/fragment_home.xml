<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.KarakiaApp.AppBarOverlay"
        tools:ignore="MissingConstraints">
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:padding="6dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/opening1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:src="@drawable/opening1"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="16dp" />
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Opening 1"
                        android:textColor="@color/white"
                        android:textStyle="bold|italic"
                        android:textAlignment="center"
                        android:layout_alignBottom="@id/imageView1"
                        android:layout_marginBottom="16dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/opening1"
                android:id="@+id/opening2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:src="@drawable/opening2"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="257dp" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opening 2"
                    android:textColor="@color/white"
                    android:textStyle="bold|italic"
                    android:textAlignment="center"
                    android:layout_alignBottom="@id/imageView2"
                    android:layout_marginBottom="16dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/opening2"
                android:id="@+id/blessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:src="@drawable/blessing"
                    tools:layout_editor_absoluteX="98dp"
                    tools:layout_editor_absoluteY="543dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/imageView3"
                    android:layout_marginBottom="16dp"
                    android:text="Blessing"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold|italic" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/blessing"
                android:id="@+id/closing1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/closing1"
                    tools:layout_editor_absoluteX="98dp"
                    tools:layout_editor_absoluteY="543dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Closing 1"
                    android:textColor="@color/white"
                    android:textStyle="bold|italic"
                    android:textAlignment="center"
                    android:layout_alignBottom="@id/imageView4"
                    android:layout_marginBottom="19dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_below="@+id/closing1"
                android:id="@+id/closing2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@drawable/closing2"
                    tools:layout_editor_absoluteX="98dp"
                    tools:layout_editor_absoluteY="543dp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Closing 2"
                    android:textColor="@color/white"
                    android:textStyle="bold|italic"
                    android:textAlignment="center"
                    android:layout_alignBottom="@id/imageView5"
                    android:layout_marginBottom="16dp"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>