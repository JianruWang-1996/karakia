<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context="com.Splash_Screen">

    <ImageView
        android:id="@+id/image_view_marae"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/marae_logo" />

    <TextView
        android:id="@+id/text_view_slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp"
        android:textAlignment="center"
        android:fontFamily="@font/baloo_tammudu"
        android:text="It's time to karakia at Wintec..."
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/image_view_logo"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="68dp"
        android:foregroundGravity="center"
        android:src="@drawable/img_1" />

    <ImageView
        android:id="@+id/image_view_karakia"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:foregroundGravity="center"
        android:src="@drawable/img" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/text_view_slogan"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:indeterminateTint="@color/black"/>

</RelativeLayout>