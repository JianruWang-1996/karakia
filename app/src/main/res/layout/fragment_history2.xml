<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.history.HistoryFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FFEB3B"
            app:popupTheme="@style/Theme.KarakiaApp.PopupOverlay"
            app:subtitleTextColor="#000000"
            app:titleTextColor="#000000" />

        <ImageView
            android:id="@+id/opening2"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:padding="0dp"
            android:src="@drawable/opening2"
            android:contentDescription="@string/opening2"
            app:layout_constraintStart_toStartOf="@+id/toolbar2"/>

        <TextView
            android:id="@+id/text_2"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:text="@string/opening2"
            android:textAlignment="center"
            android:textSize="30dp"
            app:layout_constraintStart_toStartOf="@+id/opening2" />

        <Button
            android:id="@+id/button_2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/history_play"
            android:layout_gravity="center"
            android:textColor="#212121"
            app:layout_constraintStart_toStartOf="@+id/text_2" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>